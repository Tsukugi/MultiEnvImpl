{
  "compilerOptions": {
    "module": "es6",
    "target": "es6",
    "lib": ["ESNext", "dom"],
    "moduleResolution": "node",
    "outDir": "./build",
    "rootDir": "./src",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "sourceMap": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["src/tests", "node_modules"]
}
